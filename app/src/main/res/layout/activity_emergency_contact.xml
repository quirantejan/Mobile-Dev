<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainEmergency"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Card for Emergency Contacts -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Emergency Contacts Title Inside Card -->
                <TextView
                    android:id="@+id/emergencyContactTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set Emergency Contacts"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#272477"
                    android:layout_marginBottom="12dp" />

                <!-- Container for Emergency Contact Fields -->
                <LinearLayout
                    android:id="@+id/emergencyContactsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <!-- Add Contact Button -->
                <Button
                    android:id="@+id/addContactButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Another Contact"
                    android:backgroundTint="#2D4FB2"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="end"
                    android:layout_marginBottom="16dp"/>

                <!-- Done Button Inside Card -->
                <Button
                    android:id="@+id/doneButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:backgroundTint="#2D4FB2"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="16dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
